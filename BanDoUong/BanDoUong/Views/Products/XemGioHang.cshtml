@model List<BanDoUong.Models.CartItem>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giỏ hàng - ToCoToCo</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #fffefc;
        }

        .card {
            background: #fff;
            border-radius: 1rem;
            box-shadow: 0 6px 16px rgba(0,0,0,0.08);
            transition: transform .3s ease;
        }

            .card:hover {
                transform: translateY(-2px);
            }

        .btn-main {
            background: linear-gradient(90deg, #f59e0b, #eab308);
            color: #fff;
            font-weight: 600;
            transition: all .3s ease;
        }

            .btn-main:hover {
                opacity: .9;
                transform: translateY(-2px);
            }

        th {
            text-transform: uppercase;
            font-size: 13px;
        }

        table {
            border-radius: 12px;
            overflow: hidden;
        }
    </style>
</head>
<body class="text-gray-800">

    <!-- Header -->
    <header class="bg-white shadow-sm">
        <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
            <h1 class="text-xl font-bold text-amber-700">Giỏ hàng của bạn</h1>
            <a href="@Url.Action("Index", "Products")"
               class="text-amber-600 hover:underline text-sm font-medium">
                ⬅️ Quay lại mua thêm
            </a>
        </div>
    </header>

    <!-- Main -->
    <main class="max-w-6xl mx-auto my-8 p-6 card">
        @if (Model.Count == 0)
        {
            <div class="text-center py-16">
                <img src="https://cdn-icons-png.flaticon.com/512/2038/2038854.png" alt="Empty Cart" class="mx-auto h-24 mb-4 opacity-70" />
                <h2 class="text-xl font-semibold text-gray-600">Giỏ hàng trống</h2>
                <p class="text-gray-500 mt-2">Hãy thêm sản phẩm yêu thích của bạn nhé!</p>
                <a href="@Url.Action("Index", "Products")"
                   class="inline-block mt-6 px-6 py-2 bg-amber-500 hover:bg-amber-600 text-white rounded-full font-medium">
                    🛍️ Tiếp tục mua hàng
                </a>
            </div>
        }
        else
        {
            <form id="cartForm" method="get" action="@Url.Action("ThanhToan", "Products")">

                <div class="overflow-x-auto">
                    <table class="min-w-full">
                        <thead class="bg-amber-50 text-amber-700">
                            <tr>
                                <th class="p-3 text-center">
                                    <input type="checkbox" id="checkAll" name="chon" class="accent-amber-500 w-4 h-4" />
                                </th>
                                <th class="p-3 text-left">Sản phẩm</th>
                                <th class="p-3 text-center">Giá</th>
                                <th class="p-3 text-center">Số lượng</th>
                                <th class="p-3 text-center">Thành tiền</th>
                                <th class="p-3 text-center">Xóa</th>
                            </tr>
                        </thead>
                        <tbody id="cartBody" class="divide-y divide-gray-200">
                            @{
                                int so_luong_gio_hang = 0;
                                decimal tong_tien = 0m;
                                foreach (var item in Model)
                                {
                                    <tr class="hover:bg-amber-50 transition" data-id="@item.ProductId">
                                        <td class="p-3 text-center">

                                            <input type="checkbox" class="product-check accent-amber-500 w-4 h-4"
                                                   name="chon_san_pham" value="@item.ProductId" />

                                        </td>

                                        <td class="p-3 flex items-center gap-3">
                                            <img src="@Url.Content("~/Image_Water/" + item.Thumbnail)" class="w-16 h-16 rounded-lg object-cover shadow-sm">
                                            <span class="font-medium">@item.Name</span>
                                        </td>

                                        <td class="p-3 text-center text-amber-600 font-medium">@item.Price.ToString("N0")₫</td>

                                        <td class="p-3 text-center">
                                            <input type="number" value="@item.Quantity" min="1"
                                                   data-id="@item.ProductId"
                                                   class="quantity-input border border-gray-300 rounded-md w-16 px-2 py-1 text-center" />
                                        </td>

                                        <td class="p-3 text-center font-semibold text-amber-700">
                                            <span class="itemTotal">@((item.Price * item.Quantity).ToString("N0"))₫</span>
                                        </td>

                                        <td class="p-3 text-center">
                                            <form action="@Url.Action("XoaGioHang", "Products", new { productId = item.ProductId })" method="post" style="display:inline;">
                                                <input type="hidden" name="productId" value="@item.ProductId" />
                                                <button type="submit" class="text-red-500 hover:text-red-700 text-sm font-medium">
                                                    Xóa
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    so_luong_gio_hang += 1;

                                    tong_tien += item.Price * item.Quantity;
                                }

                                if (Session["Cart"] == null)
                                {
                                    int update_so_luong = so_luong_gio_hang - 1;
                                    Session["so_luong"] = update_so_luong;
                                }
                                else
                                {
                                    Session["so_luong"] = so_luong_gio_hang;
                                }


                            }
                        </tbody>
                    </table>
                </div>

                <!-- Tổng và thanh toán -->
                <div class="flex justify-between items-center mt-6 border-t pt-4 flex-wrap gap-3">
                    <div class="text-gray-700 text-lg">
                        Tổng cộng:
                        <span id="tongCong" class="font-bold text-amber-700 text-xl ml-2"></span>
                    </div>
                    <button type="submit" id="btnThanhToan"
                            class="btn-main rounded-full px-8 py-2 text-lg disabled:opacity-40 disabled:cursor-not-allowed">
                        Thanh Toan
                    </button>
                </div>
            </form>
        }
    </main>


</body>



<script>
    function formatVND(n) {
        return n.toLocaleString('vi-VN') + '₫';
    }

    function tinhTongTien() {
        let tong = 0;
        $('.product-check:checked').each(function () {
            let $tr = $(this).closest('tr');
            let gia = parseInt($tr.find('td:nth-child(3)').text().replace(/[^\d]/g, '')) || 0;
            let soLuong = parseInt($tr.find('.quantity-input').val()) || 0;
            tong += gia * soLuong;
        });
        $('#tongCong').text(formatVND(tong));
    }

    // Tích chọn tất cả
    $('#checkAll').on('change', function () {
        $('.product-check').prop('checked', $(this).is(':checked'));
        tinhTongTien();
    });

    $(document).ready(function () {
        $('.product-check, .quantity-input').on('change input', tinhTongTien);
        tinhTongTien();

        // Khi nhấn Thanh Toán
        $('#cartForm').on('submit', function (e) {
            e.preventDefault();

            const selected = $('.product-check:checked');
            if (selected.length === 0) {
                alert('Vui lòng chọn ít nhất 1 sản phẩm để thanh toán.');
                return false;
            }

            // Xóa input ẩn cũ (nếu có)
            $(this).find('input[name="SelectedIds"]').remove();

            // Thêm input ẩn cho mỗi sản phẩm được chọn
            selected.each(function () {
                $('<input>').attr({
                    type: 'hidden',
                    name: 'SelectedIds',
                    value: $(this).val()
                }).appendTo('#cartForm');
            });

            // Gửi form thật sự
            this.submit();
        });
    });
</script>


</html>
