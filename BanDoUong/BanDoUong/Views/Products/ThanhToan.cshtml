@model List<BanDoUong.Models.CartItem>
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mua ngay - ToCoToCo</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(to bottom right, #fffef9, #fdf4e3);
        }

        .card {
            background: #fff;
            border-radius: 1rem;
            box-shadow: 0 6px 20px rgba(0,0,0,0.08);
            transition: transform .3s ease;
        }

            .card:hover {
                transform: translateY(-3px);
            }

        .btn-main {
            background: linear-gradient(90deg, #f59e0b, #eab308);
            color: #fff;
            font-weight: 600;
            transition: all .3s ease;
        }

            .btn-main:hover {
                opacity: 0.9;
                transform: translateY(-2px);
            }
    </style>
</head>
<body class="text-gray-800">

    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
        <div class="max-w-7xl mx-auto flex justify-between items-center px-5 py-4">
            <a href="index.html" class="flex items-center gap-3">
                <img src="https://cdn-icons-png.flaticon.com/512/2983/2983762.png" alt="Logo" class="h-10 w-10 object-contain">
                <span class="font-bold text-amber-600 text-lg">ToCoToCo</span>
            </a>
            <a href="index.html" class="text-sm text-gray-600 hover:text-amber-600">← Quay lại</a>
        </div>
    </header>

    <!-- Main -->
    <main class="max-w-6xl mx-auto my-10 p-6 bg-white rounded-2xl shadow-lg grid md:grid-cols-2 gap-10">

        <!-- BÊN TRÁI: Thông tin sản phẩm -->
        <div>
            <h2 class="text-2xl font-bold text-amber-700 mb-5 border-b border-amber-200 pb-2">Thông tin sản phẩm</h2>

            <div class="space-y-4">
                @foreach (var item in Model)
                {
                    <div class="border border-gray-200 rounded-xl p-4 shadow-sm hover:shadow-md transition">
                        <div class="flex justify-between items-center">
                            <div>
                                <p class="text-lg font-semibold text-gray-800">@item.Name</p>
                                <p class="text-sm text-gray-500">
                                    Giá:
                                    <span class="text-amber-600 font-semibold">@item.Price.ToString("N0")₫</span>
                                </p>
                            </div>
                            <span class="text-sm text-gray-500">x @item.Quantity</span>
                        </div>

                        <p class="mt-2 text-base font-medium">
                            Thành tiền:
                            <span class="text-amber-700 font-semibold">
                                @((item.Price * item.Quantity).ToString("N0"))₫
                            </span>
                        </p>
                    </div>
                }
            </div>

            <!-- Tổng cộng + nút xác nhận -->
            <div class="mt-8 border-t pt-4 text-right">
                <h3 class="text-xl font-semibold">
                    Tổng cộng:
                    <span class="text-amber-600 font-bold">@ViewBag.Total.ToString("N0")₫</span>
                </h3>
                <button class="mt-4 bg-amber-600 hover:bg-amber-700 text-white px-6 py-2 rounded-full text-lg shadow-md transition">
                    Xác nhận mua hàng
                </button>
            </div>
        </div>


        <!-- BÊN PHẢI: Form thông tin người mua -->
        <div>
            <h2 class="text-2xl font-bold text-amber-700 mb-5 border-b border-amber-200 pb-2">Thông tin người mua</h2>

            <form onsubmit="return confirmPurchase(event)" class="space-y-5">
                <div>
                    <label class="block mb-1 font-medium">Họ và tên</label>
                    <input type="text" name="FullName" required
                           class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:border-amber-500 focus:ring-1 focus:ring-amber-400">
                </div>

                <div>
                    <label class="block mb-1 font-medium">Số điện thoại</label>
                    <input type="tel" name="Phone" required
                           class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:border-amber-500 focus:ring-1 focus:ring-amber-400">
                </div>

                <div>
                    <label class="block mb-1 font-medium">Địa chỉ nhận hàng</label>
                    <textarea name="Address" rows="2" required
                              class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:border-amber-500 focus:ring-1 focus:ring-amber-400"></textarea>
                </div>

                <div>
                    <label class="block mb-1 font-medium">Phương thức thanh toán</label>
                    <select name="PaymentMethod"
                            class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:border-amber-500 focus:ring-1 focus:ring-amber-400">
                        <option>Thanh toán khi nhận hàng (COD)</option>
                        <option>Chuyển khoản ngân hàng</option>
                        <option>Ví điện tử (Momo, ZaloPay, v.v.)</option>
                    </select>
                </div>

                <button class="w-full bg-amber-600 hover:bg-amber-700 text-white rounded-full py-3 mt-6 text-lg shadow-md transition">
                    Xác nhận mua
                </button>
            </form>
        </div>

    </main>


    <!-- Footer -->
    <footer class="mt-12 bg-gradient-to-t from-stone-900 to-stone-800 text-white text-center py-6">
        <p class="text-sm text-gray-300">© 2025 ToCoToCo - All Rights Reserved</p>
    </footer>

    <script>
        function updateTotal() {
            const qty = document.getElementById("qty").value;
            const total = 25000 * qty;
            document.getElementById("totalPrice").innerText = total.toLocaleString('vi-VN') + "₫";
        }

        function confirmPurchase(e) {
            e.preventDefault();
            alert("Đơn hàng của bạn đã được ghi nhận! Cảm ơn bạn đã mua tại ToCoToCo 🍹");
        }
        function confirmPurchase(e) {
            e.preventDefault();
            alert("Đơn hàng của bạn đã được xác nhận!");
            return false;
        }
    </script>

</body>
</html>
