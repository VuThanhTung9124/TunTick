@model BanDoUong.Models.Product
@{
    ViewBag.Title = "Chi tiết sản phẩm";
}

<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@Model.name - ToCoToCo</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 text-gray-700 antialiased">

    <!-- Header -->
    <!-- Header -->
    <header class="bg-white shadow-sm sticky top-0 z-40">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-4">
                <a href="#" class="flex items-center gap-3">
                    <img src="https://cdn-icons-png.flaticon.com/512/2983/2983762.png" alt="Logo" class="h-10 w-10 object-contain" />
                    <span class="hidden sm:inline-block text-lg font-bold text-amber-600">Xin chào: @Session["User"]</span>
                </a>

                <nav class="hidden md:flex items-center gap-6 text-sm font-medium text-gray-600">
                    <a href="#" class="hover:text-amber-600">Giới thiệu</a>
                    <a href="#products" class="hover:text-amber-600">Sản phẩm</a>
                    <a href="#news" class="hover:text-amber-600">Tin tức</a>
                    <a href="#stores" class="hover:text-amber-600">Cửa hàng</a>
                </nav>

                <div class="flex items-center gap-3">
                    <button class="p-2 rounded-full hover:bg-gray-100">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h18v18H3z" /></svg>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <!-- Product detail -->
    <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="mt-8">
            <a href="@Url.Action("Index", "Products")"
               class="inline-flex items-center gap-2 text-sm text-gray-600 hover:text-amber-600 transition">
                <span class="text-lg">←</span>
                <span>Quay lại danh sách</span>
            </a>
        </div>

        <br />

        <form action="/Products/ThanhToan" method="post">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-10 bg-white p-6 rounded-2xl shadow-md">

               
                <div class="relative">
                    @{
                        string pathImage = "~/Image_Water/" + Model.thumbnail;
                    }
                    <img src="@Url.Content(pathImage)"
                         alt="@Model.name"
                         class="rounded-xl shadow-md w-full h-[420px] object-cover">
                    <input type="hidden" name="thumbnail" value="@Model.thumbnail" />
                </div>

                <!-- Info -->
                <div>
                    <h1 class="text-3xl font-bold text-gray-800">@Model.name</h1>
                    <input type="hidden" name="name" value="@Model.name" />

                    <div class="mt-3">
                        <p class="text-amber-600 text-lg font-semibold">
                            Giá: @String.Format("{0:N0}₫", Model.price)
                        </p>
                        <input type="hidden" name="price" value="@Model.price" />
                        @if (Model.old_price != null && Model.old_price > Model.price)
                        {
                            <p class="text-gray-400 line-through text-sm mt-1">
                                Giá cũ: @String.Format("{0:N0}₫", Model.old_price)
                            </p>
                        }
                    </div>

                    <div class="mt-6 flex gap-3">

                        @*<button type="submit"
                                class="bg-amber-600 text-white px-6 py-3 rounded-lg font-semibold hover:opacity-90 shadow-md">
                            MUA NGAY
                        </button>*@

                        @Html.ActionLink("Mua ngay", "MuaNgay", "Products", new { id = Model.product_id },
    new { @class = "bg-amber-600 text-white px-6 py-3 rounded-lg font-semibold hover:opacity-90 shadow-md" }
)


                        @Html.ActionLink("Thêm vào giỏ", "GioHang", "Products", new { id = Model.product_id },
                            new { @class = "border border-amber-600 text-amber-600 px-6 py-3 rounded-lg font-medium hover:bg-amber-50 inline-block text-center" }
                        )
                    </div>

                    <hr class="my-6">

                    <div>
                        <h3 class="font-bold text-lg mb-2">Mô tả sản phẩm</h3>
                        <p class="text-gray-600 leading-relaxed">@Model.description</p>
                        <p class="text-sm mt-3 text-gray-500">Danh mục: @Model.category</p>
                    </div>
                </div>
            </div>
        </form>


    </main>

    <!-- Footer -->
    <footer class="mt-12 bg-gradient-to-t from-stone-900 to-stone-800 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
                <h6 class="font-bold text-lg">Công ty CP TM & DV ToCoToCo Việt Nam</h6>
                <p class="text-sm mt-3 text-gray-300">Địa chỉ: Tầng 7, Tòa nhà Times City, Hà Nội</p>
                <p class="text-sm text-gray-300 mt-1">Hotline: 1900 1234</p>
            </div>

            <div>
                <h6 class="font-bold text-lg">Về chúng tôi</h6>
                <ul class="mt-3 text-sm text-gray-300 space-y-2">
                    <li><a href="#" class="hover:text-white">Giới thiệu</a></li>
                    <li><a href="#" class="hover:text-white">Chính sách</a></li>
                    <li><a href="#" class="hover:text-white">Liên hệ</a></li>
                </ul>
            </div>

            <div>
                <h6 class="font-bold text-lg">Kết nối</h6>
                <p class="text-sm text-gray-300 mt-3">Đăng ký nhận tin khuyến mãi</p>

                <form class="mt-3 flex flex-col gap-2" action="/Emails/Create" method="post">
                    @Html.AntiForgeryToken()
                    <h4 class="text-green-400 mt-3">@ViewBag.ThongBaoEmail</h4>
                    <input type="email" name="DiaChiEmail" placeholder="Email của bạn"
                           class="w-full px-3 py-2 rounded bg-white/10 focus:outline-none" required />

                    <input type="text" name="NoiDung" placeholder="Nội dung bạn muốn hỏi..."
                           class="w-full px-3 py-2 rounded bg-white/10 focus:outline-none" required />

                    <button class="px-4 py-2 bg-amber-500 rounded font-semibold hover:bg-amber-600"
                            type="submit">
                        Gửi
                    </button>
                </form>


            </div>

        </div>

        <div class="border-t border-white/10 text-center py-4 text-sm text-gray-300">© 2025 ToCoToCo. Bản quyền thuộc về Công ty.</div>
    </footer>

</body>
</html>
