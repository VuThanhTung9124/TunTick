@{
    Layout = null; // Tắt layout để view tự do
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Đăng ký</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        .glass {
            background: rgba(255,255,255,0.25);
            backdrop-filter: blur(16px);
            border: 1px solid rgba(255,255,255,0.3);
        }

        .btn-yellow {
            background: linear-gradient(90deg,#f59e0b,#eab308);
        }

            .btn-yellow:hover {
                filter: brightness(1.1);
            }
    </style>
</head>
<body class="bg-[url('https://images.unsplash.com/photo-1551024709-8f23befc6f87?auto=format&fit=crop&w=1600&q=80')] bg-cover bg-center min-h-screen">

    <!-- Wrapper căn giữa -->
    <div class="min-h-screen flex items-center justify-center">
        <div class="glass shadow-xl rounded-2xl p-6 w-full max-w-md text-white">
            <h2 class="text-3xl font-bold text-center drop-shadow-lg mb-4">Tạo tài khoản</h2>

            <!-- Hiển thị lỗi nếu có -->
            @if (!string.IsNullOrEmpty(ViewBag.ErrorDangKi))
            {
                <div class="bg-red-600/50 text-white p-2 rounded mb-3 text-center">
                    @ViewBag.ErrorDangKi
                </div>
            }

            <form action="/Accounts/DangKi" method="post" class="space-y-3">

                <div>
                    <label class="text-sm opacity-90">Họ và tên</label>
                    <input type="text" name="HoVaTen" required class="w-full mt-1 px-3 py-2.5 rounded-lg bg-white/20 border border-white/30 focus:ring-2 focus:ring-yellow-400 text-white">
                </div>

                <div>
                    <label class="text-sm opacity-90">Số điện thoại</label>
                    <input type="tel" name="SoDienThoai" required pattern="[0-9]{10}" class="w-full mt-1 px-3 py-2.5 rounded-lg bg-white/20 border border-white/30 focus:ring-2 focus:ring-yellow-400 text-white">
                </div>

                <div>
                    <label class="text-sm opacity-90">Email</label>
                    <input type="email" name="Email" required class="w-full mt-1 px-3 py-2.5 rounded-lg bg-white/20 border border-white/30 focus:ring-2 focus:ring-yellow-400 text-white">
                </div>

                <div>
                    <label class="text-sm opacity-90">Mật khẩu</label>
                    <input type="password" name="MatKhau" required class="w-full mt-1 px-3 py-2.5 rounded-lg bg-white/20 border border-white/30 focus:ring-2 focus:ring-yellow-400 text-white">
                </div>

                <div>
                    <label class="text-sm opacity-90">Xác nhận mật khẩu</label>
                    <input type="password" name="XacNhanMatKhau" required class="w-full mt-1 px-3 py-2.5 rounded-lg bg-white/20 border border-white/30 focus:ring-2 focus:ring-yellow-400 text-white">
                </div>

                <button type="submit" class="btn-yellow text-white font-semibold py-2.5 rounded-lg w-full shadow-lg transition">Đăng ký</button>
            </form>

            <p class="text-center mt-4 text-sm opacity-90">
                Đã có tài khoản?
                <a href="@Url.Action("DangNhap", "Accounts")" class="text-yellow-300 font-semibold hover:underline">Đăng nhập</a>
            </p>
        </div>
    </div>

</body>
</html>
